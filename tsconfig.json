{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "src",
    "custom.d.ts"
  ]
}
